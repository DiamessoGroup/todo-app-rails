<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
    <% if list.completed %>
    <tr class="table-info striker">
      <td><%= link_to list.description, edit_list_path(list)%></td>
      <td><%= form_with(model: list) do |form| %>
        <%= form.check_box :completed, checked: false, style: "visibility: hidden" %>
        <%= form.submit "Uncross", class: "btn btn-primary btn-sm" %>
        <% end %></td>
      <td>
        <center>
          <%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
        </center>
      </td>
    </tr>
    <% else %>
    <tr>
      <td><%= link_to list.description, edit_list_path(list)%></td>
      <td><%= form_with(model: list) do |form| %>
        <%= form.check_box :completed, checked: true, style: "visibility: hidden" %>
        <%= form.submit "Cross", class: "btn btn-primary btn-sm"  %>
        <% end %> </td>
      <td>
        <center>
          <%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
        </center>
      </td>
    </tr>
    <% end %>

    <% end %>
  </tbody>
</table>

<br>

<%= button_to "Delete All Complete Items", { action: "trash_complete" }, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %><br>

<%= button_to "Delete All Items", { action: "trash_all" }, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
